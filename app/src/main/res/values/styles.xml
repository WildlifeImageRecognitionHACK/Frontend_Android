<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="label_buttons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:backgroundTint">@color/primaryLight</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

</resources>
